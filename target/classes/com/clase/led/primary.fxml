<?xml version="1.0" encoding="UTF-8"?>

<?import com.clase.led.ShapeLed?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.paint.Color?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.clase.led.PrimaryController">
   <bottom>
      <HBox BorderPane.alignment="CENTER">
         <children>
            <ColorPicker fx:id="cpicker" prefHeight="61.0" prefWidth="175.0" onAction="#colorBorde">
               <value>
                  <Color red="1.0" />
               </value>
            </ColorPicker>
            <ToggleButton fx:id="boton" onAction="#parpadeoButton" prefHeight="61.0" prefWidth="175.0" text="On/Off" />
         </children>
      </HBox>
   </bottom>
   <center>
      <ShapeLed fx:id="shapeLed" nodeOrientation="LEFT_TO_RIGHT" />
   </center>
</BorderPane>
